{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": [
      "index.ts",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }